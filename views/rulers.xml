<openerp>
    <data>
        <record id="rulers_view_form" model="ir.ui.view">
            <field name="name">rulers.view.form</field>
            <field name="model">rulers</field>
            <field name="arch" type="xml">
                <form string="Regla">
                    <group string="Modelos">
                        <field name="rule_model" string="Modelo" widget="selection"/>
                    </group>

                    <group string="Comparaciones">
                        <field name="rule_field" string="Regla" widget="selection"
                               domain="[('model_id', '=', rule_model)]"
                        />
                        <field name="rule_operator" string="Operador" widget="selection"
                               required="1"
                        />
                        <!--                      TODO fields_type hay que ponerlo oculto-->
                    </group>

<!--                    <footer>-->
