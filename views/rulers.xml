<!--                                icon="gtk-apply"/>-->
<!--                        or-->
<!--                        <button special="cancel" string="Cancel" type="object"-->
<!--                                icon="gtk-cancel"/>-->
<!--                    </footer>-->

                </form>
            </field>
        </record>


    </data>
</openerp>